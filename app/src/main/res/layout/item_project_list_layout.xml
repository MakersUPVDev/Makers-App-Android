<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout">

    <com.parse.ParseImageView
        android:id="@+id/projectImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip" />

    <TextView
        android:id="@+id/projectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/projectImageView"/>

    <TextView
        android:id="@+id/projectDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/projectImageView"/>

    <com.parse.ParseImageView
        android:id="@+id/skillImageView1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_below="@id/projectDescription"/>

    <com.parse.ParseImageView
        android:id="@+id/skillImageView2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/skillImageView1"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_below="@id/projectDescription"/>

    <com.parse.ParseImageView
        android:id="@+id/skillImageView3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/skillImageView2"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_below="@id/projectDescription"/>
</RelativeLayout>